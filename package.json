{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "front end utilising React",
  "main": "script.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "firebase emulators:start",
    "lint": "npx eslint .",
    "babel": "npx babel --watch components --out-dir preprocessed --presets react-app/prod",
    "browserify": "browserify preprocessed/*.js -o development.js",
    "watchify": "watchify preprocessed/*.js -o development.js",
    "build": "browserify development.js -g [ envify --NODE_ENV production ] -g uglifyify | terser --compress --mangle > ./public/production.js",
    "deploy-all": "firebase deploy",
    "deploy": "firebase deploy --only hosting"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Isoaxe/personal-website.git"
  },
  "author": "Lucas O'Connell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Isoaxe/personal-website/issues"
  },
  "homepage": "https://github.com/Isoaxe/personal-website#readme",
  "dependencies": {
    "dompurify": "^2.2.6",
    "envify": "^4.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-render-html": "^0.6.0",
    "react-reveal": "^1.2.2",
    "styled-components": "^5.2.1",
    "terser": "^5.5.1",
    "uglifyify": "^5.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-react-app": "^3.1.2",
    "browserify": "^17.0.0",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.2"
  }
}
